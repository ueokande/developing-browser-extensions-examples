{
  "manifest_version": 2,
  "name": "Click counter",
  "description": "Count your clicks on the web sites",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "browser_action": {
    "default_icon": "browser_action_icon.png"
  }
}
